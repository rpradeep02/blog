<% if @article.errors.any? %>
<ul>
  <% @article.errors.full_messages.each do |msg|%>
      <li><%= msg %></li>
  <%end%>
</ul>
<% end %>
<div class='row g-3 align-items-center'>
  <div class="mb-3">
    <%= form_for @article do |f| %>
      <div class="form-group">
        <div class="col-sm-2 col-form-label ">
          <%= f.label :title %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :title, class: "form-control", placeholder: "title of article", autofocus: true %>
        </div></br>
      </div>
      <div class="form-group">
        <div class="col-sm-2 col-form-label ">
          <%= f.label :description %>
        </div>
        <div class="col-sm-8">
          <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "body of article"%>
        </div>
      </div>
      <div class="form-group">
        <div class="col-offset-2 col-sm-10"></br>
          <%= f.submit class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    <% end %>
    <div class="col-xs-4 col-xs-offset-4"></br>
      [ <%= link_to "Cancel request and return to article list ", articles_path %> ]
    </div>
  </div>
</div>