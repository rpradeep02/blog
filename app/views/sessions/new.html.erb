<h1 >Login to Blog</h1>
<%= form_for(:session, url: login_path) do |f| %>
  <div class="form-group">
    <div class="col-sm-2 col-form-label ">
      <%= f.label :email %>
    </div>
    <div class="col-4">
      <%= f.email_field :email, class: "form-control", placeholder: "Enter Email", autofocus: true%>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-2 col-form-label ">
      <%= f.label :password %>
    </div>
    <div class="col-4">
      <%= f.password_field :password, class: "form-control", placeholder: "Enter Password", autocomplete: "off" %>
    </div>
  </div>
  <div class="form-group">
    <div class="offset-1 col-5"></br>
      <%= f.submit "Login",class: 'btn btn-primary btn-lg' %>
    </div>
  </div>
<% end %>
<div class="col-2 offset-1"></br>
  [ <%= link_to "Cancel request and return to article list ", articles_path %> ]
</div>