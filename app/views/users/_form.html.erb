<%= render "shared/errors", obj: @user %>

<div class='row g-3 align-items-center'>
  <div class="mb-3">
    <%= form_for @user do |f| %>
      <div class="form-group">
        <div class="col-sm-2 col-form-label ">
          <%= f.label :username %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
        </div></br>
      </div>
      <div class="form-group">
        <div class="col-sm-2 col-form-label ">
          <%= f.label :email %>
        </div>
        <div class="col-sm-8">
          <%= f.email_field :email, class: "form-control", placeholder: "Enter Email"%>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-2 col-form-label ">
          <%= f.label :password %>
        </div>
        <div class="col-sm-8">
          <%= f.password_field :password, class: "form-control", placeholder: "Enter Password"%>
        </div>
      </div>
      <div class="form-group">
        <div class="offset-3 col-sm-10"></br>
          <%= f.submit(@user.new_record? ? "Sign Up" : "Update account",class: 'btn btn-primary btn-lg') %>
        </div>
      </div>
    <% end %>
    <div class="col-4 offset-2"></br>
      [ <%= link_to "Cancel request and return to article list ", articles_path %> ]
    </div>
  </div>
</div>