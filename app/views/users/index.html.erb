<h1 align="center">All Bloggers</h1>
<div align="center">
  <div class="center-2">
    <%= will_paginate %>
  </div>

  <% @users.each do |user|%>
    <ul class="listing">
      <div class='row'>
        <div class="card card-body md-4 offset-1">
          
          <li><%= link_to gravatar_for(user), user_path(user) %>
          <li class="article-title">
            <%= link_to user.username,  user_path(user) %>
          </li>
          <li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
        </div>
      </div>
    </ul>
  <%end%>
  <div class="center-2">
    <%= will_paginate %>
  </div>

</div>